<%= render "shared/error", error: @workflow  %>
<%= nested_form_for @workflow, html: {class: "form-horizontal"} do |f| %>
  <div id="edit_wf_form">
    <%= f.label :name, "Workflow" %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :service %>
    <%= f.collection_select :service_id, Service.all, :id, :name %>
    <%= f.label :area %>
    <%= f.collection_select :area_id, Area.all, :id, :name %>
    <%= f.label :start_state_id %>
    <%= f.text_field :start_state_id %>
    <%= f.label :img, "Image Icon Name"%>
    <%= f.text_field :img %>
  </div>
  <%= f.fields_for :states, f.object.states.order(:id) %>
  <%= f.link_to_add "Add a state", :states, class: "btn btn-small btn-success"  %><br/>
  <%= f.submit "Submit", class: "btn btn-medium btn-primary" %>
<% end %>