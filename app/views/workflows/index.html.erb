<% provide(:title, 'What help do you need?')%>  
<div id="wf_index">
	<h3>What help do you need?</h3>	
	<%= link_to 'Add Workflow', new_workflow_path, class: "btn btn-small btn-primary" if signed_in? %>
	<ul class="wf_list">
		<% @workflows.each do |wf| %>
			<li class="<%= wf.start_state_id.nil? ? 'wf_list_item disable' : 'wf_list_item' %>">
				<% if !wf.start_state_id.nil? %>
					<%= link_to workflow_state_path(wf, wf.start_state_id) do %>
						<div class="wf_link">
					 		<div class="wf_desc"><%= wf.description %></div>
							<%= image_tag wf.img %>
					 	</div>
					<% end %>	
				<%	else %>
					<div class='wf_name'><%= wf.description %></div>
				<%	end %>
				<%= link_to 'Show Workflow', workflow_path(wf), class: "btn btn-small btn-primary" if signed_in? %>
			</li>
		<% end %>
	</ul>
</div>
